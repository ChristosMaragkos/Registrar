<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0; netstandard2.1</TargetFrameworks>
        <Authors>Christos Maragkos</Authors>
        <Version>1.2.0</Version>
        <Nullable>enable</Nullable>
        <PackageId>Registrar</PackageId>
        <Description>Lightweight namespaced identifier + registry library with freezing, reverse lookups, and thread-safe bootstrap.</Description>
        <RepositoryUrl>https://github.com/ChristosMaragkos/Registrar</RepositoryUrl>
        <PackageProjectUrl>https://github.com/ChristosMaragkos/Registrar</PackageProjectUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>registry;identifiers;namespaced;game;content;freezing</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <IncludeSymbols>false</IncludeSymbols>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="/" />
    </ItemGroup>

</Project>
